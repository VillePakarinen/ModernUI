<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ownedville.modernartui.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="154dp"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/guideline1"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="486dp"
            tools:layout_editor_absoluteX="0dp"/>

        <View
            android:id="@+id/rectangle_left_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F5EA98"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_left_bottom"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"/>


        <View
            android:id="@+id/rectangle_left_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCB82"
            android:visibility="visible"
            app:layout_constraintVertical_weight="1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_left_top"
            android:layout_marginBottom="16dp"/>

        <View
            android:id="@+id/rectangle_right_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F58F00"
            android:visibility="visible"
            app:layout_constraintVertical_weight="1"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_right_middle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.888"
            android:layout_marginBottom="8dp"/>
        <View
            android:id="@+id/rectangle_right_middle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            android:visibility="visible"
            app:layout_constraintVertical_weight="1"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_right_bottom"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_right_top"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.888"
            android:layout_marginBottom="8dp"/>
        <View
            android:id="@+id/rectangle_right_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#90D4A5"
            android:visibility="visible"
            app:layout_constraintVertical_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_right_middle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.888"
            android:layout_marginBottom="8dp"/>




        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
